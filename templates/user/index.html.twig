{% extends 'base.html.twig' %}

{% block title %}Panelists{% endblock %}

{% block body %}
    <div class="row align-items-center mb-3">
        <h1 class="col text-primary">Panelists</h1>
        <div class="col-auto">
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">New</a>
        </div>
    </div>

    <table class="table mb-5">
        <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Country</th>
            <th scope="col">Subscribed</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody id="user-tbody">
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.newsletterAgreement ? 'Yes' : 'No' }}</td>
                <td class="align-content-end d-flex justify-content-end">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning ms-2">Edit</a>
                    <a class="btn btn-danger ms-2 delete-user" data-id="{{ user.id }}"
                       data-token="{{ csrf_token('delete' ~ user.id) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
