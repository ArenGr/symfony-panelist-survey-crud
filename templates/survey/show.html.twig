{% extends 'base.html.twig' %}

{% block title %}Survey{% endblock %}

{% block body %}
    <h1 class="text-primary">Survey</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ survey.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ survey.status ? 'active' : 'inactive' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ survey.createdAt ? survey.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_survey_index') }}" class="btn btn-secondary">Back</a>

    <a href="{{ path('app_survey_edit', {'id': survey.id}) }}">edit</a>

    {{ include('survey/_delete_form.html.twig') }}
{% endblock %}